<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="4.恭喜您，设置成功"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/setup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:onClick="checked">

        <CheckBox
            android:id="@+id/cb_safe"
           	android:clickable="false"
           	android:layout_marginTop="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_content_style"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cb_safe"
            android:text="你没有开启防盗功能"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_online" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/phone" />

        <Button style="@style/Button_pre_style" />
        
        <Button
            android:id="@+id/but_next"
            style="@style/Button_next_style"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/next"
            android:text="下一页" />
    </RelativeLayout>

</LinearLayout>